{
  "definitions": [
    {
      "title": "Article",
      "id": "article",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Article",
              "model": "article"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "article",
      "fields": [
        {
          "component": "select",
          "label": "Layout Type",
          "name": "layout-type",
          "valueType": "string",
          "options": [
            { "name": "All Articles", "value": "dynamic" },
            { "name": "Fetch Articles Manually", "value": "manual" }
          ]
        },
        {
          "component": "container",
          "label": "Display Articles Dynamically",
          "name": "dynamic-link-container",
          "valueType": "string",
          "collapsible": true,
          "fields": [
            {
              "component": "aem-content",
              "name": "dynamic-link",
              "label": "Please select all articles root page path",
              "valueType": "string",
              "validation": {
                "rootPath": "/content/eds-helium-xwalk"
              }
            }
          ],
          "condition": { "===": [{"var" : "layout-type"}, "dynamic"] }
        },
        {
          "component": "aem-content",
          "name": "manual-article-links",
          "label": "Add Articles Manually",
          "valueType": "string",
          "description":"Please select the page path",
          "multi": true,
          "validation": {
            "rootPath": "/content/eds-helium-xwalk/index/articles"
          },
          "condition": { "===": [{"var" : "layout-type"}, "manual"] }
        }
      ]
    }
  ],
  "filters": []
}